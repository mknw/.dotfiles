#!/bin/zsh
#
# At the (bourne) shell prompt
FTPDir="$HOME/.dotfiles/vim/after/ftplugin"

if [ -d "$FTPDir" ]; then 
	rm "$FTPDir/*"; 
else
	mkdir -p "$FTPDir"
fi


for file in /usr/share/vim/vim81/ftplugin/*.vim; do
	echo "linking `basename $file` filetype."
	ln -s ~/.dotfiles/vim/vimrc-after ~/.dotfiles/vim/after/ftplugin/`basename $file`
done
